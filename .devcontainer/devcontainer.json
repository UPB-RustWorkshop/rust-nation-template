{
    "build": { "dockerfile": "Dockerfile" },
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "32gb" 
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "bungcip.better-toml"
            ]
        }
    },
    "containerUser": "codespace",
    "remoteUser": "codespace",
    "postCreateCommand": "git submodule update --init"
}